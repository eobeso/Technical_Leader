@model IEnumerable<Technical_Leader.Models.ClienteModels>
@using GridMvc.Html
@{
    ViewBag.Title = "Lista Clientes";
}

<h2>Lista Clientes</h2>


<link href="@Url.Content("~/Content/Gridmvc.css")" rel="stylesheet" />
<link href="@Url.Content("~/Content/bootstrap.min.css")" rel="stylesheet" />
<script src="@Url.Content("~/Scripts/jquery-3.0.0.min.js")"></script>
<script src="@Url.Content("~/Scripts/gridmvc.min.js")"></script>

<div class="code-cut">
    
    @Html.Grid(Model).Columns(Columns=> {
    Columns.Add(c => c.Id).Titled("Id").Filterable(true);
    Columns.Add(c => c.Nombre).Titled("Nombre").Filterable(true);
    Columns.Add(c => c.Apellido).Titled("Apellido").Filterable(true);
    Columns.Add(c => c.Edad).Titled("Edad").Filterable(true);
    Columns.Add(c => c.FNacimiento).Titled("FNacimiento").Filterable(true);
    Columns.Add()
    .Encoded(false)
    .Sanitized(false)
    .SetWidth(30)
    .RenderValueAs(o => Html.ActionLink("Edit", "Eidt", new { id = o.Id }));

}).WithPaging(10).Sortable(true)
</div>